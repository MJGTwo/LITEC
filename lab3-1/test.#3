#include <c8051_SDCC.h>
#include <stdlib.h>
#include <stdio.h>

int CEX0_PW = 20000;

void Port_Init(void);
void PCA_Init(void);

void main(void)
{
	int temp0_lo_to_hi;
	Sys Init();
	Port_Init();
	PCA_Init();

	while(1)
	{
		temp0_lo_to_hi=0xFFFF - CEX0_PW;
		PCA0CP0 = temp0_lo_to_hi;
	}
}

void Port_Init(void)
{
	P0MDOUT |= 0x04;
	XBR0 = 0x08;
}

void PCA_Init(void)
{
	PCA0CPM0 = 0xC2;
	PCA0CN = 0x40;
}